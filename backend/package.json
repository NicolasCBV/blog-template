  "scripts": {
    "dev": "dotenv -e .env -- ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules --no-notify --exit-child src/main.ts",
    "start": "dotenv -e .env.prod -- node ./dist/main.js",
    "build": "rm -rf ./dist && tsup ./src/main.ts",
    "vercel-build": "echo \"using vercel build\"",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "migration:create": "pnpm typeorm migration:create",
    "migration:run": "pnpm typeorm -d ./src/infra/storages/db/typeorm/ormconfig.ts migration:run",
    "migration:revert": "pnpm typeorm -d ./src/infra/storages/db/typeorm/ormconfig.ts migration:revert",
    "test": "dotenv -e .env.test -- jest",
    "test:e2e": "dotenv -e .env.prod -- jest --config ./jest.e2e.config.ts"
  },
  "devDependencies": {
    "@swc/core": "^1.3.80",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.6",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vercel": "^32.2.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "firebase-admin": "^11.10.1",
    "inversify": "^6.0.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.1",
    "multer": "1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "reflect-metadata": "^0.1.13",
    "zod": "^3.22.2"
  }
